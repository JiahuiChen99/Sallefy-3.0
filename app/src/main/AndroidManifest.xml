<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.myapplication">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>


    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logo_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.NoActionBar"
        android:usesCleartextTraffic="true">

        <activity android:name=".controller.activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".controller.activities.RegisterActivity"/>
        <activity android:name=".controller.activities.PaginaPrincipalActivity"/>
        <activity android:name=".controller.activities.OpcionesActivity"/>
        <activity android:name=".controller.activities.BuscarPlaylistActivity"/>
        <activity android:name=".controller.activities.IdPlaylistActivity"/>
        <activity android:name=".controller.activities.AddSongActivity"/>
        <activity android:name=".controller.activities.TrackDetailsActivity"/>
    </application>

</manifest>